@model mp_test.Models.OrderWithOffersListModel

@Styles.Render("~/Content/datatables")

@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/OrderList")
}

@{
    ViewBag.Title = "MyOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Orders</h2>

<table class="myOrderListTable">
    <thead>
        <tr>
            <th>Type</th>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Offers</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in @Model.Orders)
        {
            <tr>
                <td>@order.ServiceType.Title</td>
                <td>@order.Title</td>
                <td>@order.Description</td>
                <td>@order.OrderCost @order.OrderCurrency.Title</td>
                <td><a href="@Url.Action("OffersByOrder", "Offer", new { orderId=@order.Id})">Offers: @order.Offers.Count</a></td>
            </tr>
        }
    </tbody>
</table>